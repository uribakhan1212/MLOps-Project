{
  "dashboard": {
    "title": "Diabetes Inference Server - MLOps Dashboard",
    "uid": "diabetes-inference",
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/sec)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(flask_http_request_total{job=\"diabetes-inference-direct\"}[1m]))",
            "legendFormat": "Total Requests/sec"
          }
        ]
      },
      {
        "id": 2,
        "title": "Active Pods",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(up{job=\"diabetes-inference-direct\"})"
          }
        ]
      },
      {
        "id": 3,
        "title": "Total Requests",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(flask_http_request_total{job=\"diabetes-inference-direct\"})"
          }
        ]
      },
      {
        "id": 4,
        "title": "Average Response Time (seconds)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(flask_http_request_duration_seconds_sum[5m]) / rate(flask_http_request_duration_seconds_count[5m])",
            "legendFormat": "Avg Response Time"
          }
        ]
      },
      {
        "id": 5,
        "title": "HTTP Status Codes",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (status) (rate(flask_http_request_total{job=\"diabetes-inference-direct\"}[5m]))",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Error Rate (%)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(flask_http_request_total{job=\"diabetes-inference-direct\",status=~\"5..\"}[5m])) / sum(rate(flask_http_request_total{job=\"diabetes-inference-direct\"}[5m])) * 100",
            "legendFormat": "Error Rate %"
          }
        ]
      },
      {
        "id": 7,
        "title": "Request by Endpoint",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (endpoint) (rate(flask_http_request_total{job=\"diabetes-inference-direct\"}[5m]))",
            "legendFormat": "{{endpoint}}"
          }
        ]
      }
    ]
  }
}